#!/bin/bash
declare -A array=()
IFS=':'
while read key value
do
array[$key]=$value
done < file.txt
for key in ${!array[@]}
do
echo $key:${array[$key]}
done
unset IFS


#!/bin/bash
declare -A address
while IFS=':' read name add
do
    address[$name]=$add
    #echo "$name - ${address[$name]}"
done < file.txt

for name in "${!address[@]}"
do
    echo "$name:${address[$name]}"
done

